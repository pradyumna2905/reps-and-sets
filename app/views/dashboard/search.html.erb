<div class="container">
    <div class="row search-result">
        <% @members.each do |member| %>
            <div class="col-md-10 col-xs-offset-1 well member">
                <%= member.full_name %>
                <% if current_user %>
                    <%= link_to "Follow", friendships_path(friend_id: member.id), method: :post, class: "btn btn-primary pull-right" unless current_user.follows_or_same?(member) %>
                <% end %>
            </div>
        <% end %>
    </div>

    <%= will_paginate @members, renderer: BootstrapPagination::Rails %>
</div>
